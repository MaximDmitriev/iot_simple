{
  "name": "back_express",
  "version": "1.0.0",
  "description": "express + mongoose",
  "main": "app.js",
  "scripts": {
    "tsc": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create": "node createDb.js",
    "start": "nodemon app.ts"
  },
  "author": "maximv.dmitriev@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-mongo": "^4.4.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.2",
    "mongoose": "^6.5.1",
    "mqtt": "^4.2.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-node": "^11.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "."
  },
  "eslintConfig": {
    "extends": [
      "plugin:node/recommended",
      "google"
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "linebreak-style": "off",
      "operator-linebreak": "off",
      "require-jsdoc": "off",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "arrow-parens": [
        "warn",
        "as-needed"
      ],
      "quote-props": [
        "warn",
        "consistent-as-needed"
      ],
      "max-len": [
        "error",
        120
      ],
      "no-invalid-this": "off",
      "no-unused-vars": "warn",
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Router"
          ]
        }
      ],
      "node/no-unsupported-features/es-syntax": "off"
    }
  }
}
